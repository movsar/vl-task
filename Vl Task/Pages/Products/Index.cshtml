@page "/"
@model Vl_Task.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Products";
}

<h1 class="text-center">Products</h1>

<div class="p-2">
    <h5>Search</h5>
    <form method="post" action="" style="width:100%;">
        
        <div class="row col-8">
            <div class="col-4">
                <input class="col-12" type="text" name="productName" placeholder="..." />
                <br>
                <label for="productName" style="font-size: 10px;">Product name</label>
            </div>

            <div class="col-4">
                <input class="col-12" type="text" name="productVersionName" placeholder="..." />
                <br>
                <label for="productName" style="font-size: 10px;">Product version name</label>
            </div>

            <div class="col-2">
                <input class="col-12" type="text" name="minVolume" placeholder="..." />
                <br>
                <label for="productName" style="font-size: 10px;">Min volume</label>
            </div>

            <div class="col-2">
                <input class="col-12" type="text" name="maxVolume" placeholder="..." />
                <br>
                <label for="productName" style="font-size: 10px;">Max volume</label>
            </div>

            <div class="col-2">
                <input class="col-10 " type="submit" value="Search"/>
            </div>

        </div>

    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
