@page
@model Vl_Task.Pages.ProductVersions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Product Versions</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductVersion[0].ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductVersion[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductVersion[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductVersion[0].CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductVersion[0].Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductVersion[0].Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductVersion[0].Length)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProductVersion) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
