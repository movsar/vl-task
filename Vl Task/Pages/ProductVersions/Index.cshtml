@page
@model Vl_Task.Pages.ProductVersions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Product Versions</h1>


<div class="p-2">
    <h5>Search</h5>
    <form method="post" action="" style="width:100%;">

        <div class="row col-8">
            <div class="col-4">
                <input class="col-12" type="text" name="productName" placeholder="..." />
                <br>
                <label for="productName" style="font-size: 10px;">Product name</label>
            </div>

            <div class="col-4">
                <input class="col-12" type="text" name="productVersionName" placeholder="..." />
                <br>
                <label for="productName" style="font-size: 10px;">Product version name</label>
            </div>

            <div class="col-2">
                <input class="col-12" type="text" name="minVolume" placeholder="..." />
                <br>
                <label for="productName" style="font-size: 10px;">Min volume</label>
            </div>

            <div class="col-2">
                <input class="col-12" type="text" name="maxVolume" placeholder="..." />
                <br>
                <label for="productName" style="font-size: 10px;">Max volume</label>
            </div>

            <div class="col-2">
                <input class="col-10 " type="submit" value="Search" />
            </div>

        </div>

    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductVersions[0].ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductVersions[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductVersions[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductVersions[0].CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductVersions[0].Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductVersions[0].Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductVersions[0].Length)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProductVersions) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-page="Create">Create New</a>
